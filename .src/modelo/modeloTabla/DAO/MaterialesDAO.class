  If sqlcadena = Null Then
    resultado = contenido()
  Else
    resultado = sql(sqlcadena)
  Endif
  resultado.MoveTo(numero)
  Try grid[0, 1].text = Str$(resultado!idmaterial)
  Try grid[1, 1].text = Str$(resultado!fecha)
  Try grid[2, 1].text = Str$(resultado!textocorto)
  Try grid[3, 1].text = Str$(resultado!textolargo)
  Try grid[4, 1].text = Str$(resultado!lugarcompra)
  Try grid[5, 1].text = Str$(resultado!precio)
  Try grid[6, 1].text = Str$(resultado!comentario)

End

